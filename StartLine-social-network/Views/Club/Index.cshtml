@model IEnumerable<Club>

<div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in @Model)
            {
                 <div class="col">
                  <div class="card shadow-sm">
                    <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="No image>
                    <div class="card-body">
                      <p class="card-text">@item.Title</p>
                      <p class="card-text">@item.Description</p>
                      <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                          <a type=" btn button-success" asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                            {
                                <a type="btn button-success" asp-controller="Club" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a type="btn button-danger" asp-controller="Club" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            }
                        </div>
                        <small class="text-muted">@item.Address?.City</small>
                        <small class="text-muted">@item.ClubCategory</small>
                      </div>
                    </div>
                  </div>
            }
        </div>
      </div>
    </div>
