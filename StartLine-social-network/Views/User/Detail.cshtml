@using StartLine_social_network.ViewModels

@model UserDetailViewModel

<div class="col-lg-7 mb-4 mb-sm-0">
    <img alt="Image" src="@Model.ProfileImageUrl" class="rounded img-fluid"/>
</div>

<div class="text-justify mt-5">
    <h1 class="mb-2">@Model.UserName</h1>
    <h2 class="ml-5 mt-2">@Model.Description</h2>
    <h3 class="font-weight-light mt-6">@Model.City, @Model.Province</h3>
    <h3 class="font-weight-light mt-2">Clubber, @Model.UserName </h3>
</div>

